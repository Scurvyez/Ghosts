<?xml version="1.0" encoding="utf-8"?>

<Defs>

    <!--==================== Saw Human Ghost (Soothed) ====================-->

    <ThoughtDef>
        <defName>SZ_SawGhost_Soothed</defName>
        <!-- <workerClass>Ghosts.ThoughtWorker_SawGhost</workerClass> -->
        <icon>Things/Pawn/Blank_east</icon>
        <showBubble>false</showBubble>
        <durationDays>0.10</durationDays>
        <stackLimit>1</stackLimit>
        <stages>
            <li>
                <label>saw ghost</label>
                <description>{PAWN_nameDef} saw a ghost.\n\n{PAWN_nameDef} feels a calming wave flow gently over them.</description>
                <baseMoodEffect>3</baseMoodEffect>
            </li>
        </stages>
    </ThoughtDef>

    <!--==================== Saw Human Ghost (Scared) ====================-->

    <ThoughtDef>
        <defName>SZ_SawGhost_Scared</defName>
        <!-- <workerClass>Ghosts.ThoughtWorker_SawGhost</workerClass> -->
        <icon>Things/Pawn/Blank_east</icon>
        <showBubble>false</showBubble>
        <durationDays>0.10</durationDays>
        <stackLimit>1</stackLimit>
        <nullifyingTraits>
            <li>Psychopath</li>
            <li>Bloodlust</li>
        </nullifyingTraits>
        <stages>
            <li>
                <label>saw ghost</label>
                <description>{PAWN_nameDef} saw a ghost! Fear has taken hold of {PAWN_nameDef} body!</description>
                <baseMoodEffect>-7</baseMoodEffect>
            </li>
        </stages>
    </ThoughtDef>

    <!--==================== Saw Spirit Animal (Bear) ====================-->

    <ThoughtDef>
        <defName>SZ_SawSpiritAnimal</defName>
        <!-- <workerClass>Ghosts.ThoughtWorker_SawGhost</workerClass> -->
        <icon>Things/Pawn/Blank_east</icon>
        <showBubble>false</showBubble>
        <durationDays>0.10</durationDays>
        <stackLimit>1</stackLimit>
        <nullifyingTraits>
            <li>Psychopath</li>
        </nullifyingTraits>
        <stages>
            <li>
                <label>saw spirit animal</label>
                <description>{PAWN_nameDef} saw the spirit of an animal!</description>
                <baseMoodEffect>2</baseMoodEffect>
            </li>
        </stages>
    </ThoughtDef>

</Defs>