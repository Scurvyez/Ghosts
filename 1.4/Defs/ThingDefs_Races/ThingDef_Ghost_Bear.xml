<?xml version="1.0" encoding="utf-8"?>

<Defs>

    <!--==================== Ghost Bear ThingDef ====================-->

    <ThingDef ParentName="SZ_GhostBaseThing">
        <defName>SZ_GhostBear</defName>
        <comps>
            <li Class="Ghosts.CompProperties_GiveThought">
                <goodThoughtDef>SZ_SawSpiritAnimal</goodThoughtDef>
                <radius>6</radius>
            </li>
            <li Class="Ghosts.CompProperties_ExtraPawnGraphics">
                <graphicsExtra>
                    <li>
                        <texPath>Things/Pawn/Bear/Bear_Layer1</texPath>
					    <graphicClass>Graphic_Multi</graphicClass>
                        <shaderType>MoteGlowDistorted</shaderType>
                        <drawOffset>(0.0, 1.0, 0.0)</drawOffset>
                        <shaderParameters>
                            <_distortionScale>2</_distortionScale>
                            <_distortionIntensity>0.068</_distortionIntensity>
                            <_DistortionTex>/Other/Ripples</_DistortionTex>
                        </shaderParameters>
                        <damageData>
                            <enabled>false</enabled>
                        </damageData>
                    </li>
                    <li>
                        <texPath>Things/Pawn/Bear/Bear_Layer2</texPath>
					    <graphicClass>Graphic_Multi</graphicClass>
                        <shaderType>MoteGlowDistorted</shaderType>
                        <drawOffset>(0.0, 1.1, 0.0)</drawOffset>
                        <shaderParameters>
                            <_distortionScale>3</_distortionScale>
                            <_distortionIntensity>0.038</_distortionIntensity>
                            <_DistortionTex>/Other/Ripples</_DistortionTex>
                        </shaderParameters>
                        <damageData>
                            <enabled>false</enabled>
                        </damageData>
                    </li>
                    <li>
                        <texPath>Things/Pawn/Bear/Bear_Layer3</texPath>
					    <graphicClass>Graphic_Multi</graphicClass>
                        <shaderType>MoteGlowDistorted</shaderType>
                        <drawOffset>(0.0, 1.2, 0.0)</drawOffset>
                        <shaderParameters>
                            <_distortionScale>1.25</_distortionScale>
                            <_distortionIntensity>0.028</_distortionIntensity>
                            <_DistortionTex>/Other/Ripples</_DistortionTex>
                        </shaderParameters>
                        <damageData>
                            <enabled>false</enabled>
                        </damageData>
                    </li>
                    <li>
                        <texPath>Things/Pawn/Bear/Bear_Layer4</texPath>
					    <graphicClass>Graphic_Multi</graphicClass>
                        <shaderType>MoteGlowDistorted</shaderType>
                        <drawOffset>(0.0, 1.3, 0.0)</drawOffset>
                        <shaderParameters>
                            <_distortionScale>1</_distortionScale>
                            <_distortionIntensity>0.083</_distortionIntensity>
                            <_DistortionTex>/Other/Ripples</_DistortionTex>
                        </shaderParameters>
                        <damageData>
                            <enabled>false</enabled>
                        </damageData>
                    </li>
                </graphicsExtra>
            </li>
        </comps>
    </ThingDef>

    <!--==================== Ghost Bear PawnKindDef ====================-->

    <PawnKindDef ParentName="SZ_GhostBaseKind">
        <defName>SZ_GhostBear</defName>
        <label>bear ghost</label>
        <race>SZ_GhostBear</race>
    </PawnKindDef>

</Defs>